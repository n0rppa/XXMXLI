name: Generate tracklist.json

on:
  push:
    paths:
      - 'assets/audio/**'

jobs:
  generate-tracklist:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Generate tracklist.json
        run: |
          cd assets/audio
          printf '[\n' > tracklist.json
          files=( *.mp3 )
          for i in "${!files[@]}"; do
            file="${files[$i]}"
            title="${file%.*}"
            # Poista tiedostonimestä mahdolliset korvausmerkit, jos haluat siistimmän titlen:
            title="${title//_/ }"
            printf '  { "title": "%s", "file": "%s" }%s\n' "$title" "$file" $( [ $i -lt $((${#files[@]}-1)) ] && echo ',' )
          done >> tracklist.json
          printf ']\n' >> tracklist.json

      - name: Commit and push tracklist.json
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add assets/audio/tracklist.json
          git commit -m "Auto-generate tracklist.json" || exit 0
          git push
